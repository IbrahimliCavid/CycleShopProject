@model RegisterDto



    <div class="modal-dialog modal-dialog-centered shadow-lg" >
    <div class="modal-content w-100">

        <div class="modal-body  rounded-3">
                <div class="cl-login-form">
                    <h2 class="cl-login-title">Signup</h2>
                <form method="post" asp-controller="Account" asp-action="Register" class="user">
                    <div asp-validation-summary="None"></div>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                    {
                        <div class="form-group">
                            <div class="alert alert-danger">
                                @ViewBag.Message
                            </div>
                        </div>
                    }
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input class="form-control form-control-user" asp-for="Name"
                                   placeholder="Name">

                        </div>
                        <div class="col-sm-6">
                            <input class="form-control form-control-user" asp-for="Surname"
                                   placeholder="Surname">
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-user" asp-for="Email"
                               placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-user" asp-for="UserName"
                               placeholder="UserName">
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input class="form-control form-control-user"
                                   asp-for="Password" placeholder="Password" type="password">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Sign Up
                    </button>
                </form>
                </div>
                <div class="cl-loginwith-social">
                    <ul>
                        <li>
                            <a href="javascript:;" class="cl-btn cl-facebook-btn"><i class="fab fa-facebook-f"></i> Facebook</a>
                        </li>
                        <li>
                            <a href="javascript:;" class="cl-btn cl-twitter-btn"><i class="fab fa-twitter"></i> Twitter</a>
                        </li>
                    </ul>
                <div class="text-center">
                    <a class="small" asp-controller="Account" asp-action="Login">Already have an account</a>
                </div>
                </div>
            </div>
        </div>
    </div>
