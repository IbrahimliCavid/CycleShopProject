@using Entities.Concrete.MemberShip
@model ContactCreateDto;
@{
    var user = (ApplicationUser)ViewData["User"];
}
<!-- breadcrumb start -->
<div class="cl-breadcrumb">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="cl-breadcrumb-box">
                    <h1>Contact Us</h1>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="javascript:;">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
