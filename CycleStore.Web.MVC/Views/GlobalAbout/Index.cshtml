@model AboutViewModel
<!-- breadcrumb start -->
<div class="cl-breadcrumb">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="cl-breadcrumb-box">
                    <h1>About Us</h1>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="javascript:;">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb end -->
<!-- features start -->
<div class="cl-features spacer-top">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Services)
            {
                <div class="col-xl-3 col-md-6">
                    <div class="cl-feature-box wow fadeIn">
                        <div class="cl-feature-img">
                            <img src="@item.ImgUrl" alt="image">
                        </div>
                        <div class="cl-feature-text">
                            <a href="javascript:;" class="cl-feature-title">@item.Title</a>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
        </div>
<!-- features end -->
<!-- about us start -->
<div class="cl-about">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="cl-about-img wow fadeInLeft">
                    <img src="assets/images/about.jpg" alt="image">
                    <div class="cl-play-icon">
                        <a class="cl-popup-youtube" href="https://www.youtube.com/watch?v=TuoNvPPnr2o">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 494.148 494.148">
                                <path d="M405.284,201.188L130.804,13.28C118.128,4.596,105.356,0,94.74,0C74.216,0,61.52,16.472,61.52,44.044v406.124
                                        c0,27.54,12.68,43.98,33.156,43.98c10.632,0,23.2-4.6,35.904-13.308l274.608-187.904c17.66-12.104,27.44-28.392,27.44-45.884
                                        C432.632,229.572,422.964,213.288,405.284,201.188z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="cl-about-content wow fadeInRight">
                    <div class="cl-heading">
                        <h1>About Us</h1>
                        <h4>We have been making bicycles for 25 years</h4>
                    </div>
                    @foreach (var item in Model.Abouts)
                    {
                        <p>@item.Description</p>
                    }
                    <ul>
                        @foreach (var item in Model.Activities)
                        {
                            <li><i class="far fa-check-square"></i>@item.ActivityInfo</li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- about us end -->
<!-- team start -->
<div class="cl-team spacer-top-less">
    <div class="container">
        <div class="cl-heading">
            <h1>Top Racers</h1>
            <p>The Story of Strength and Endurance</p>
        </div>

        <div class="row">

            @foreach (var item in Model.BestRacers) 
            {
            <div class="col-lg-3 col-md-6">
                <div class="cl-team-box wow fadeInUp" data-wow-delay="0.2s">
                    <div class="cl-team-img">
                        <img src="@item.ImgUrl" alt="image">
                    </div>
                    <div class="cl-team-content">
                        <h2>@item.Surname  @item.Name</h2>
                        <div class="cl-team-hide-content">
                            <p>@item.Info</p>
                            <ul class="cl-social-icons">
                                <li>
                                    <a href="@item.FacebookLink"><i class="fab fa-facebook-f"></i></a>
                                </li>
                                <li>
                                    <a href="@item.TwitterLink"><i class="fab fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="@item.EmailLink"><i class="fab fa-google-plus-g"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</div>
<!-- team end -->
