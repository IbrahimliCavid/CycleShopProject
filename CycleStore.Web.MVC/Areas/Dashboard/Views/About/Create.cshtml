@model AboutCreateDto;

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">About</label>
                <textarea asp-for="Description" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Description" class="text-danger"> </span>

            </div>
          
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.DEFAULT_BUTTON_NAME_ADD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.DEFAULT_BUTTON_NAME_TO_BACK</a>
</div>